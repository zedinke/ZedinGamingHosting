// Előfizetések
model Subscription {
  id              String          @id @default(cuid())
  userId          String
  serverId        String?         @unique
  paymentProvider PaymentProvider @default(STRIPE)

  // Stripe
  stripeCustomerId     String?
  stripeSubscriptionId String? @unique
  stripePriceId        String?

  // Revolut
  revolutCustomerId String?
  revolutOrderId    String? @unique
  revolutPaymentId  String?

  // PayPal
  paypalSubscriptionId String? @unique
  paypalPlanId         String?
  paypalBillingToken   String?

  status             SubscriptionStatus @default(ACTIVE)
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean            @default(false)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  server   Server?   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  invoices Invoice[]

  @@map("subscriptions")
}

enum PaymentProvider {
  STRIPE
  REVOLUT
  PAYPAL
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  UNPAID
  TRIALING
}

// Számlák
model Invoice {
  id              String          @id @default(cuid())
  userId          String
  subscriptionId  String?
  paymentProvider PaymentProvider @default(STRIPE)

  // Stripe
  stripeInvoiceId String? @unique

  // Revolut
  revolutOrderId   String? @unique
  revolutPaymentId String?

  // PayPal
  paypalInvoiceId     String? @unique
  paypalTransactionId String?

  amount        Float
  currency      String        @default("HUF")
  status        InvoiceStatus @default(PENDING)
  dueDate       DateTime?
  paidAt        DateTime?
  invoiceNumber String        @unique
  pdfUrl        String?

  // Hatósági követelmények - számlázási adatok
  taxAmount Float? // ÁFA összeg
  taxRate   Float? // ÁFA kulcs (pl. 27%)
  subtotal  Float? // Nettó összeg
  items     Json? // Számla tételek (tömb)

  // Céginformációk (ha van)
  companyName      String? // Cégnév
  companyTaxNumber String? // Adószám
  companyAddress   String? @db.Text // Cím
  companyVatNumber String? // ÁFA szám

  // Számlázási cím
  billingName      String? // Számlázási név
  billingAddress   String? @db.Text // Számlázási cím
  billingTaxNumber String? // Számlázási adószám

  // Fizetési információk
  paymentMethod    String? // Fizetési mód
  paymentReference String? // Fizetési referencia

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)

  @@map("invoices")
}

enum InvoiceStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
  CANCELED
}

// Kuponok
model Coupon {
  id            String       @id @default(cuid())
  code          String       @unique
  discountType  DiscountType
  discountValue Float
  maxUses       Int?
  usedCount     Int          @default(0)
  validFrom     DateTime
  validUntil    DateTime
  isActive      Boolean      @default(true)
  
  // Kupon alkalmazhatósága
  applicableToGamePackages   Boolean @default(true) // Alkalmazható-e normál játék csomagokra
  applicableToPremiumPackages Boolean @default(true) // Alkalmazható-e premium csomagokra
  
  // Specifikus csomagok (ha null, akkor minden csomagra érvényes)
  premiumPackageId String? // Ha megadva, csak erre a premium csomagra érvényes
  
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  premiumPackage PremiumPackage? @relation(fields: [premiumPackageId], references: [id], onDelete: SetNull)

  @@index([premiumPackageId])
  @@map("coupons")
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

// Támogatási ticketek
model SupportTicket {
  id        String          @id @default(cuid())
  userId    String
  subject   String
  category  TicketCategory
  status    TicketStatus    @default(OPEN)
  priority  TicketPriority  @default(MEDIUM)
  messages  TicketMessage[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  closedAt  DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("support_tickets")
}

enum TicketCategory {
  TECHNICAL
  BILLING
  GENERAL
  SERVER_ISSUE
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_FOR_USER
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model TicketMessage {
  id        String   @id @default(cuid())
  ticketId  String
  userId    String? // null ha admin válasz
  content   String   @db.Text
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())

  ticket SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@map("ticket_messages")
}

// CMS - Oldalak
model Page {
  id             String   @id @default(cuid())
  slug           String
  title          String
  content        Json // Rich text content
  isPublished    Boolean  @default(false)
  locale         String   @default("hu")
  seoTitle       String?
  seoDescription String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([slug, locale])
  @@map("pages")
}

// CMS - Blog bejegyzések
model BlogPost {
  id             String    @id @default(cuid())
  slug           String
  title          String
  excerpt        String?
  content        Json
  coverImage     String?
  authorId       String
  isPublished    Boolean   @default(false)
  publishedAt    DateTime?
  locale         String    @default("hu")
  seoTitle       String?
  seoDescription String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([slug, locale])
  @@map("blog_posts")
}

// CMS - FAQ
model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String   @db.Text
  order     Int      @default(0)
  locale    String   @default("hu")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("faqs")
}

// CMS - Árazási csomagok
model PricingPlan {
  id            String   @id @default(cuid())
  name          String   @unique
  description   String?  @db.Text
  price         Float
  currency      String   @default("HUF")
  interval      String   @default("month") // month, year
  stripePriceId String?
  features      Json // Features array
  isActive      Boolean  @default(true)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("pricing_plans")
}

// Játék csomagok
model GamePackage {
  id            String   @id @default(cuid())
  gameType      GameType
  name          String // Csomag neve (deprecated - használd a nameHu/nameEn mezőket)
  nameHu        String? // Csomag neve magyarul
  nameEn        String? // Csomag neve angolul
  description   String?  @db.Text // Deprecated - használd a descriptionHu/descriptionEn mezőket
  descriptionHu String? @db.Text // Leírás magyarul
  descriptionEn String? @db.Text // Leírás angolul
  price         Float
  currency      String   @default("HUF")
  interval      String   @default("month") // month, year
  image         String? // Kép URL
  videoUrl      String? // YouTube videó URL (opcionális)
  slot          Int? // Fix slot szám (ha unlimitedSlot = false)
  unlimitedSlot Boolean  @default(false) // Ha true, akkor korlátlan slot (20 slot az indítósorban)
  cpuCores      Int // Fix CPU vCore szám
  ram           Int // Fix RAM mennyiség GB-ban (ha unlimitedRam = false)
  unlimitedRam  Boolean  @default(false) // Ha true, akkor korlátlan RAM (csak CPU limit van)
  discountPrice Float? // Akciós ár (opcionális)
  pricePerSlot  Float? // Slot bővítés ára (játékonként külön beállítható)
  isActive      Boolean  @default(true) // Ha aktív, akkor megjelenik és rendelhető
  order         Int      @default(0) // Rendezési sorrend
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([gameType, isActive])
  @@map("game_packages")
}

// Premium csomagok - több játék egy csomagban
model PremiumPackage {
  id            String   @id @default(cuid())
  nameHu        String // Csomag neve magyarul
  nameEn        String // Csomag neve angolul
  descriptionHu String? @db.Text // Leírás magyarul
  descriptionEn String? @db.Text // Leírás angolul
  price         Float // Komplett csomag ára
  currency      String   @default("HUF")
  interval      String   @default("month") // month, year
  discountPrice Float? // Akciós ár (opcionális)
  isActive      Boolean  @default(true) // Ha aktív, akkor megjelenik és rendelhető
  order         Int      @default(0) // Rendezési sorrend
  
  // Automatikusan számított erőforrás limitek (a legnagyobb gépigényű játékhoz igazítva)
  cpuCores      Int // Automatikusan számított a játékok közül a legnagyobb
  ram           Int // Automatikusan számított a játékok közül a legnagyobb
  
  // Kép és videó (opcionális, ha nincs megadva, akkor a játékok képeit használjuk)
  image         String? // Fő kép URL
  videoUrl      String? // YouTube videó URL (opcionális)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  games         PremiumPackageGame[]
  servers       Server[]
  coupons       Coupon[]

  @@index([isActive])
  @@map("premium_packages")
}

// Premium csomag és játék kapcsolat (many-to-many)
model PremiumPackageGame {
  id                String   @id @default(cuid())
  premiumPackageId  String
  gameType          GameType
  
  // Játék specifikus információk a csomagban
  order             Int      @default(0) // Sorrend a csomagban
  
  premiumPackage    PremiumPackage @relation(fields: [premiumPackageId], references: [id], onDelete: Cascade)

  @@unique([premiumPackageId, gameType])
  @@index([premiumPackageId])
  @@index([gameType])
  @@map("premium_package_games")
}

// CMS - Testimonials
model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String?
  content   String   @db.Text
  avatar    String?
  rating    Int      @default(5)
  locale    String   @default("hu")
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonials")
}

// CMS - Team tagok
model TeamMember {
  id          String   @id @default(cuid())
  name        String
  role        String
  bio         String?  @db.Text
  avatar      String?
  email       String?
  socialLinks Json? // { twitter, linkedin, github, etc. }
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("team_members")
}

// Homepage Sections CMS
model HomepageSection {
  id         String   @id @default(cuid())
  type       String // hero, features, stats, cta, slideshow
  title      String?
  subtitle   String?  @db.Text
  content    Json? // Section specific content
  image      String?
  buttonText String?
  buttonLink String?
  isActive   Boolean  @default(true)
  order      Int      @default(0)
  locale     String   @default("hu")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("homepage_sections")
}

// Slideshow
model SlideshowSlide {
  id         String   @id @default(cuid())
  title      String?
  subtitle   String?  @db.Text
  image      String? // Opcionális, ha video van
  video      String? // Opcionális, ha image van
  mediaType  String   @default("image") // "image" vagy "video"
  link       String?
  buttonText String?
  isActive   Boolean  @default(true)
  order      Int      @default(0)
  locale     String   @default("hu")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("slideshow_slides")
}

// Game Categories
model GameCategory {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  icon        String?
  color       String? // Hex color
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  locale      String   @default("hu")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  games Game[]

  @@map("game_categories")
}

model Game {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  image       String?
  categoryId  String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  locale      String   @default("hu")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category GameCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@map("games")
}

// Theme Settings
model ThemeSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json // Theme configuration
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("theme_settings")
}

// Szerver gépek (host nodes)
model ServerMachine {
  id            String        @id @default(cuid())
  name          String
  ipAddress     String        @unique
  sshPort       Int           @default(22)
  sshUser       String
  sshKeyPath    String?       @db.Text // SSH kulcs elérési út
  status        MachineStatus @default(OFFLINE)
  agentVersion  String?
  lastHeartbeat DateTime?
  resources     Json? // CPU, RAM, Disk kapacitás { cpu: { cores, usage }, ram: { total, used }, disk: { total, used } }
  notes         String?       @db.Text
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  agents  Agent[]
  servers Server[]

  @@map("server_machines")
}

enum MachineStatus {
  ONLINE
  OFFLINE
  ERROR
  MAINTENANCE
}

// Game Server Agents
model Agent {
  id            String      @id @default(cuid())
  machineId     String
  agentId       String      @unique // Egyedi agent azonosító
  apiKey        String?     @unique // API kulcs az autentikációhoz
  version       String
  status        AgentStatus @default(OFFLINE)
  lastHeartbeat DateTime?
  capabilities  Json? // Agent képességek { docker: true, systemd: true, etc. }
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  machine ServerMachine @relation(fields: [machineId], references: [id], onDelete: Cascade)
  servers Server[]
  tasks   Task[]

  @@map("agents")
}

// Audit Log
model AuditLog {
  id           String   @id @default(cuid())
  userId       String?
  action       String // CREATE, UPDATE, DELETE, LOGIN, etc.
  resourceType String // User, Server, Machine, etc.
  resourceId   String?
  details      Json? // További információk
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([resourceType, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

// Rendszer beállítások
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  category  String? // system, email, payment, etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

// Webhook konfigurációk
model Webhook {
  id        String   @id @default(cuid())
  name      String
  url       String   @db.Text
  secret    String?
  events    Json // Események listája
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("webhooks")
}

// Felhasználói értesítések
model Notification {
  id        String    @id @default(cuid())
  userId    String
  type      String // Értesítés típusa
  title     String
  message   String    @db.Text
  priority  String    @default("medium") // low, medium, high, urgent
  data      Json? // További adatok
  read      Boolean   @default(false)
  readAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@index([userId, createdAt])
  @@map("notifications")
}

// Push notification tokenek (Firebase Cloud Messaging)
model PushToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  platform  String   @default("android") // android, ios
  deviceId  String? // Eszköz azonosító
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, active])
  @@index([token])
  @@map("push_tokens")
}

enum AgentStatus {
  ONLINE
  OFFLINE
  ERROR
  UPDATING
}

// Feladatütemezés
model Task {
  id          String     @id @default(cuid())
  agentId     String?
  serverId    String?
  type        TaskType
  status      TaskStatus @default(PENDING)
  command     Json // Parancs adatok { action, params, etc. }
  result      Json? // Eredmény
  error       String?    @db.Text
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  agent  Agent?  @relation(fields: [agentId], references: [id], onDelete: SetNull)
  server Server? @relation(fields: [serverId], references: [id], onDelete: SetNull)

  @@map("tasks")
}

enum TaskType {
  PROVISION
  START
  STOP
  RESTART
  UPDATE
  BACKUP
  DELETE
  INSTALL_AGENT
}

enum TaskStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

// AI Chat konverzációk
model ChatConversation {
  id        String        @id @default(cuid())
  userId    String
  title     String? // Automatikusan generált vagy felhasználó által megadott
  messages  ChatMessage[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("chat_conversations")
}

model ChatMessage {
  id             String          @id @default(cuid())
  conversationId String
  role           ChatMessageRole // USER vagy ASSISTANT
  content        String          @db.Text
  metadata       Json? // További információk (pl. használt dokumentumok)
  createdAt      DateTime        @default(now())

  conversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

enum ChatMessageRole {
  USER
  ASSISTANT
}

// Játék konfigurációk - telepítési és indítási paraméterek
model GameConfig {
  id          String   @id @default(cuid())
  gameType    GameType @unique
  displayName String // Megjelenített név
  isActive    Boolean  @default(true)
  isVisible   Boolean  @default(true) // Megjelenik-e a játékok listájában

  // Telepítési paraméterek
  steamAppId       Int? // Steam App ID (ha SteamCMD-t használ)
  installScript    String? @db.Text // Telepítési script
  requiresSteamCMD Boolean @default(false)
  requiresJava     Boolean @default(false)
  requiresWine     Boolean @default(false)

  // Indítási paraméterek
  startCommand        String? @db.Text // Indítási parancs
  startCommandWindows String? @db.Text // Windows verzió (ha Wine szükséges)
  stopCommand         String? @db.Text

  // Konfigurációs fájlok
  configPath String? // Konfigurációs fájl elérési út

  // Portok
  defaultPort Int? // Alapértelmezett port
  queryPort   Int? // Query port (ha külön van)

  // Erőforrás követelmények (alapértelmezett)
  defaultCpuCores Int @default(1)
  defaultRamGB    Int @default(2)
  defaultDiskGB   Int @default(5)

  // További beállítások
  description String? @db.Text
  image       String? // Kép URL
  order       Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pricingConfig GamePricingConfig?

  @@index([isActive, isVisible])
  @@map("game_configs")
}

// AI Analysis - Kód és rendszer elemzések
model AIAnalysis {
  id          String    @id @default(cuid())
  type        String // 'code', 'system', 'performance', 'error'
  target      String // file path, server id, machine id, etc.
  targetType  String // 'file', 'server', 'machine', 'codebase'
  status      String    @default("pending") // 'pending', 'analyzing', 'completed', 'failed'
  findings    Json? // AI findings { issues: [], suggestions: [], etc. }
  suggestions Json? // AI suggestions { fixes: [], improvements: [] }
  fixes       Json? // Auto-generated fixes { code: '', description: '' }
  confidence  Float? // AI confidence score (0-1)
  model       String? // Used AI model
  error       String?   @db.Text
  createdAt   DateTime  @default(now())
  completedAt DateTime?
  userId      String? // Who requested (if user-initiated)

  @@index([type, status])
  @@index([target, targetType])
  @@index([createdAt])
  @@map("ai_analyses")
}

// AI Task - AI feladatok végrehajtása
model AITask {
  id          String    @id @default(cuid())
  type        String // 'analyze', 'test', 'fix', 'optimize', 'generate', 'review'
  target      String // What to work on
  targetType  String // 'code', 'server', 'system', 'config'
  status      String    @default("pending") // 'pending', 'running', 'completed', 'failed', 'cancelled'
  command     Json? // Task command/parameters
  result      Json? // Task result
  error       String?   @db.Text
  agentId     String? // Which agent executed (if server-side)
  userId      String? // Who requested (if user-initiated)
  priority    Int       @default(0) // Higher = more important
  createdAt   DateTime  @default(now())
  startedAt   DateTime?
  completedAt DateTime?

  @@index([type, status])
  @@index([target, targetType])
  @@index([status, priority])
  @@index([createdAt])
  @@map("ai_tasks")
}

// AI Chat Conversation - Admin AI chat
model AIChatConversation {
  id        String          @id @default(cuid())
  userId    String
  title     String? // Conversation title
  type      String          @default("admin") // 'admin', 'development', 'system'
  messages  AIChatMessage[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@index([userId, type])
  @@index([createdAt])
  @@map("ai_chat_conversations")
}

model AIChatMessage {
  id             String   @id @default(cuid())
  conversationId String
  role           String // 'user', 'assistant', 'system'
  content        String   @db.Text
  metadata       Json? // Additional info (model used, tokens, etc.)
  createdAt      DateTime @default(now())

  conversation AIChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@map("ai_chat_messages")
}

// Játék árazási konfiguráció - dinamikus árazás
model GamePricingConfig {
  id       String   @id @default(cuid())
  gameType GameType @unique

  // Alapár (havi)
  basePrice Float  @default(0)
  currency  String @default("HUF")

  // Dinamikus árazás
  pricePerSlot  Float @default(0) // Ár/slot
  pricePerVCpu  Float @default(0) // Ár/vCPU
  pricePerRamGB Float @default(0) // Ár/RAM GB

  // Minimum értékek
  minSlots Int @default(1)
  minVCpu  Int @default(1)
  minRamGB Int @default(1)

  // Maximum értékek
  maxSlots Int @default(100)
  maxVCpu  Int @default(16)
  maxRamGB Int @default(64)

  // Lépésközök (hányasával változtatható)
  slotStep Int @default(1)
  vCpuStep Int @default(1)
  ramStep  Int @default(1)

  // Aktív-e a dinamikus árazás
  dynamicPricingEnabled Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  gameConfig GameConfig @relation(fields: [gameType], references: [gameType], onDelete: Cascade)

  @@map("game_pricing_configs")
}

// Cron job-ok - időzített szerver műveletek
model CronJob {
  id            String        @id @default(cuid())
  serverId      String
  userId        String
  
  name          String        // Cron job neve (pl: "Napi újraindítás")
  description   String?       // Leírás
  
  // Cron kifejezés: "minute hour day month weekday"
  // Példák:
  // - "0 3 * * *" - Minden nap 3:00-kor
  // - "0 */6 * * *" - 6 óránként
  // - "0 0 * * 0" - Minden vasárnap éjfélkor
  // - "30 2 1 * *" - Minden hónap 1-jén 2:30-kor
  cronExpression String       // Standard cron formátum
  
  // Művelet típusa
  action        CronJobAction // START, STOP, RESTART, UPDATE, WIPE, BACKUP stb.
  
  // Játékspecifikus beállítások (opcionális)
  gameType      GameType?     // Ha játékspecifikus
  
  // Email értesítés beállítások
  notifyOnSuccess Boolean     @default(false) // Sikeres végrehajtáskor email
  notifyOnFailure Boolean     @default(false) // Sikertelen végrehajtáskor email
  notifyAlways   Boolean      @default(false) // Mindig email (success + failure)
  
  // Státusz
  isActive      Boolean       @default(true)  // Aktív-e a cron job
  lastRun       DateTime?     // Utolsó végrehajtás ideje
  lastResult    String?       // Utolsó eredmény (SUCCESS, FAILED, SKIPPED)
  lastError     String?       @db.Text        // Utolsó hibaüzenet (ha volt)
  nextRun       DateTime?     // Következő végrehajtás ideje (számított)
  
  // Végrehajtás statisztikák
  runCount      Int           @default(0)     // Hányszor futott le
  successCount  Int           @default(0)     // Hányszor volt sikeres
  failureCount  Int           @default(0)     // Hányszor volt sikertelen
  
  // További beállítások
  timezone      String        @default("Europe/Budapest") // Időzóna
  enabled       Boolean       @default(true)  // Engedélyezve van-e
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  server        Server        @relation(fields: [serverId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  executions    CronJobExecution[]
  
  @@index([serverId])
  @@index([userId])
  @@index([isActive, enabled])
  @@index([nextRun])
  @@map("cron_jobs")
}

enum CronJobAction {
  START       // Szerver indítása
  STOP        // Szerver leállítása
  RESTART     // Szerver újraindítása
  UPDATE      // Szerver frissítése
  WIPE        // Teljes wipe (játéktól függően törli a világot/adatokat)
  BACKUP      // Backup készítése
  CLEANUP     // Cleanup műveletek (logok, régi fájlok törlése)
  SAVE        // Save mentés (amennyiben van)
}

// Cron job végrehajtási logok
model CronJobExecution {
  id            String        @id @default(cuid())
  cronJobId     String
  serverId      String
  userId        String
  
  action        CronJobAction
  status        CronExecutionStatus @default(PENDING)
  
  startedAt     DateTime      @default(now())
  completedAt   DateTime?
  duration      Int?          // Végrehajtás időtartama milliszekundumban
  
  result        String?       // SUCCESS, FAILED, SKIPPED
  error         String?       @db.Text // Hibaüzenet ha volt
  
  // Email küldés információk
  emailSent     Boolean       @default(false)
  emailSentAt   DateTime?
  
  createdAt     DateTime      @default(now())
  
  cronJob       CronJob       @relation(fields: [cronJobId], references: [id], onDelete: Cascade)
  
  @@index([cronJobId])
  @@index([serverId])
  @@index([userId])
  @@index([startedAt])
  @@index([status])
  @@map("cron_job_executions")
}

enum CronExecutionStatus {
  PENDING       // Várakozik a végrehajtásra
  RUNNING       // Végrehajtás alatt
  SUCCESS       // Sikeres
  FAILED        // Sikertelen
  SKIPPED       // Kihagyva (pl. szerver offline volt start műveletnél)
  CANCELLED     // Törölve
}
