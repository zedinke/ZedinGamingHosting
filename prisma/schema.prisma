// Prisma schema for ZedinGamingHosting
// Hestia CP által kezelt adatbázis használata
// Fontos: A Hestia CP-ben létrehozott adatbázist kell használni

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // MySQL használata Hestia CP-hez
  url      = env("DATABASE_URL")
}

// Felhasználók
model User {
  id               String    @id @default(cuid())
  email            String    @unique
  emailVerified    DateTime?
  password         String? // Hashelt jelszó
  name             String?
  image            String? // Avatar URL
  role             UserRole  @default(USER)
  twoFactorEnabled Boolean   @default(false)
  twoFactorSecret  String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Kapcsolatok
  accounts          Account[]
  sessions          Session[]
  servers           Server[]
  invoices          Invoice[]
  tickets           SupportTicket[]
  subscriptions     Subscription[]
  auditLogs         AuditLog[]
  notifications     Notification[]
  chatConversations ChatConversation[]
  pushTokens        PushToken[]
  cronJobs          CronJob[]
  cronJobExecutions CronJobExecution[]

  @@map("users")
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
  PROBA // Próba rang - ingyenes próba, de tényleges értékű számla
}

// OAuth fiókok (Google, Discord)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session kezelés
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Email verifikációs tokenek
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Jelszó visszaállítási tokenek
model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

// Játék szerverek
model Server {
  id            String       @id @default(cuid())
  userId        String
  gameType      GameType
  name          String
  status        ServerStatus @default(OFFLINE)
  ipAddress     String?
  port          Int? // Alap port (QueryPort Satisfactory-nál)
  queryPort     Int? // QueryPort (Satisfactory-nál és más játékoknál)
  beaconPort    Int? // BeaconPort (Satisfactory-nál)
  steamPeerPort Int? // SteamPeerPort (The Forest-nál)
  rustPlusPort  Int? // RustPlusPort (Rust-nál)
  telnetPort    Int? // TelnetPort (7 Days to Die-nál)
  webMapPort    Int? // WebMapPort/ControlPanelPort (7 Days to Die-nál)
  maxPlayers    Int          @default(10)
  configuration Json? // Szerver konfiguráció JSON formátumban
  resourceUsage Json? // CPU, RAM, Disk használat
  machineId     String? // Melyik gépen fut
  agentId       String? // Melyik agent kezeli
  premiumPackageId String? // Ha premium csomagból van, akkor a csomag ID-ja
  sftpUsername  String? @unique // Egyedi SFTP felhasználónév (pl: sftp_abc123)
  sftpPassword  String? // Hashelt SFTP jelszó (bcrypt)
  sftpPort      Int     @default(22) // SFTP port (általában 22)
  
  // Backup limit mezők (alapértelmezett: 5 db backup, 5 GB tárhely)
  backupCountLimit    Int     @default(5) // Maximális backup száma
  backupStorageLimitGB Float  @default(5.0) // Maximális tárhely GB-ban
  backupCountUsed     Int     @default(0) // Használt backup száma
  backupStorageUsedGB Float   @default(0.0) // Használt tárhely GB-ban
  
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription Subscription?
  machine      ServerMachine? @relation(fields: [machineId], references: [id], onDelete: SetNull)
  agent        Agent?         @relation(fields: [agentId], references: [id], onDelete: SetNull)
  premiumPackage PremiumPackage? @relation(fields: [premiumPackageId], references: [id], onDelete: SetNull)
  tasks        Task[]
  cronJobs     CronJob[]
  
  @@index([premiumPackageId])
  @@map("servers")
}

