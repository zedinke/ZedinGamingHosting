// Prisma schema for ZedinGamingHosting
// Hestia CP által kezelt adatbázis használata
// Fontos: A Hestia CP-ben létrehozott adatbázist kell használni

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // vagy "mysql" ha MySQL-t használsz a Hestia CP-ben
  url      = env("DATABASE_URL")
}

// Felhasználók
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String?   // Hashelt jelszó
  name          String?
  image         String?   // Avatar URL
  role          UserRole  @default(USER)
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Kapcsolatok
  accounts      Account[]
  sessions      Session[]
  servers       Server[]
  invoices      Invoice[]
  tickets       SupportTicket[]
  subscriptions Subscription[]

  @@map("users")
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

// OAuth fiókok (Google, Discord)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session kezelés
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Email verifikációs tokenek
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Jelszó visszaállítási tokenek
model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

// Játék szerverek
model Server {
  id            String      @id @default(cuid())
  userId        String
  gameType      GameType
  name          String
  status        ServerStatus @default(OFFLINE)
  ipAddress     String?
  port          Int?
  maxPlayers    Int         @default(10)
  configuration Json?       // Szerver konfiguráció JSON formátumban
  resourceUsage Json?       // CPU, RAM, Disk használat
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription  Subscription?

  @@map("servers")
}

enum GameType {
  ARK
  MINECRAFT
  CSGO
  RUST
  VALHEIM
  SEVEN_DAYS_TO_DIE
  OTHER
}

enum ServerStatus {
  ONLINE
  OFFLINE
  STARTING
  STOPPING
  RESTARTING
  ERROR
}

// Előfizetések
model Subscription {
  id                String            @id @default(cuid())
  userId            String
  serverId          String?           @unique
  stripeCustomerId  String?
  stripeSubscriptionId String?        @unique
  stripePriceId     String?
  status            SubscriptionStatus @default(ACTIVE)
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean          @default(false)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  server            Server?           @relation(fields: [serverId], references: [id], onDelete: Cascade)
  invoices          Invoice[]

  @@map("subscriptions")
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  UNPAID
  TRIALING
}

// Számlák
model Invoice {
  id                String        @id @default(cuid())
  userId            String
  subscriptionId    String?
  stripeInvoiceId   String?       @unique
  amount            Float
  currency          String        @default("HUF")
  status            InvoiceStatus @default(PENDING)
  dueDate           DateTime?
  paidAt            DateTime?
  invoiceNumber     String        @unique
  pdfUrl            String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription      Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)

  @@map("invoices")
}

enum InvoiceStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
  CANCELED
}

// Kuponok
model Coupon {
  id            String   @id @default(cuid())
  code          String   @unique
  discountType  DiscountType
  discountValue Float
  maxUses       Int?
  usedCount     Int      @default(0)
  validFrom     DateTime
  validUntil    DateTime
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("coupons")
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

// Támogatási ticketek
model SupportTicket {
  id          String          @id @default(cuid())
  userId      String
  subject     String
  category    TicketCategory
  status      TicketStatus    @default(OPEN)
  priority    TicketPriority  @default(MEDIUM)
  messages    TicketMessage[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  closedAt    DateTime?

  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("support_tickets")
}

enum TicketCategory {
  TECHNICAL
  BILLING
  GENERAL
  SERVER_ISSUE
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_FOR_USER
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model TicketMessage {
  id        String   @id @default(cuid())
  ticketId  String
  userId    String?  // null ha admin válasz
  content   String   @db.Text
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())

  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@map("ticket_messages")
}

// CMS - Oldalak
model Page {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  content     Json     // Rich text content
  isPublished Boolean  @default(false)
  locale      String   @default("hu")
  seoTitle    String?
  seoDescription String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([slug, locale])
  @@map("pages")
}

// CMS - Blog bejegyzések
model BlogPost {
  id          String   @id @default(cuid())
  slug        String
  title       String
  excerpt     String?
  content     Json
  coverImage  String?
  authorId    String
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  locale      String   @default("hu")
  seoTitle    String?
  seoDescription String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([slug, locale])
  @@map("blog_posts")
}

// CMS - FAQ
model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String   @db.Text
  order     Int      @default(0)
  locale    String   @default("hu")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("faqs")
}

// CMS - Árazási csomagok
model PricingPlan {
  id            String   @id @default(cuid())
  name          String   @unique
  description   String?  @db.Text
  price         Float
  currency      String   @default("HUF")
  interval      String   @default("month") // month, year
  stripePriceId String?
  features      Json     // Features array
  isActive      Boolean  @default(true)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("pricing_plans")
}

// CMS - Testimonials
model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String?
  content   String   @db.Text
  avatar    String?
  rating    Int      @default(5)
  locale    String   @default("hu")
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonials")
}

// CMS - Team tagok
model TeamMember {
  id        String   @id @default(cuid())
  name      String
  role      String
  bio       String?  @db.Text
  avatar    String?
  email     String?
  socialLinks Json?  // { twitter, linkedin, github, etc. }
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("team_members")
}

// Rendszer beállítások
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

