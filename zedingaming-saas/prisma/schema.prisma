// Prisma schema for ZedinGamingHosting SaaS
// Minimális séma - csak alapvető funkciók és moduláris rendszer

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // SQLite - nincs szükség külső adatbázis szerverre
  url      = env("DATABASE_URL")
}

// Felhasználók (csak admin)
model User {
  id               String    @id @default(cuid())
  email            String    @unique
  emailVerified    DateTime?
  password         String? // Hashelt jelszó
  name             String?
  image            String?
  role             UserRole  @default(ADMIN) // Alapértelmezetten csak ADMIN
  twoFactorEnabled Boolean   @default(false)
  twoFactorSecret  String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]

  @@map("users")
}

enum UserRole {
  ADMIN // Csak admin szerepkör
}

// OAuth fiókok (Google, Discord)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session kezelés
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Email verifikációs tokenek
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// System License - SaaS bérleti rendszer
model SystemLicense {
  id              String   @id @default(cuid())
  licenseKey      String   @unique // Egyedi license kulcs
  subscriptionId  String?  @unique // Külső subscription ID (ha van)
  
  // Előfizetés információk
  startDate       DateTime
  endDate         DateTime
  isActive        Boolean  @default(true)
  isTrial         Boolean  @default(false)
  
  // License típus
  licenseType     LicenseType @default(MONTHLY)
  maxUsers        Int?     // Korlátlan ha null
  maxServers      Int?     // Korlátlan ha null
  
  // Telepítés információk
  installationId  String   @unique // Egyedi telepítés ID
  domain          String?  // Telepített domain
  serverInfo      Json?    // Szerver információk (IP, stb.)
  
  // Frissítések
  lastUpdateCheck DateTime?
  updateChannel   String   @default("stable") // stable, beta, alpha
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("system_licenses")
}

enum LicenseType {
  TRIAL        // 14 napos próba
  MONTHLY      // Havi előfizetés
  YEARLY       // Éves előfizetés
  LIFETIME     // Élethosszig tartó
}

// Modulok - moduláris rendszer
model Module {
  id          String       @id @default(cuid())
  name        String       @unique // 'database-mysql', 'database-postgresql', 'email', stb.
  displayName String       // 'MySQL Adatbázis', 'PostgreSQL Adatbázis', 'Email Rendszer'
  description String?     // Modul leírás
  category    ModuleCategory // 'database', 'communication', 'payment', 'feature'
  version     String       // Modul verzió
  isInstalled Boolean      @default(false)
  isActive    Boolean      @default(false)
  config      Json?        // Modul konfiguráció
  installedAt DateTime?
  updatedAt   DateTime     @updatedAt
  
  settings    ModuleSetting[]
  
  @@map("modules")
}

enum ModuleCategory {
  DATABASE
  COMMUNICATION
  PAYMENT
  FEATURE
  INTEGRATION
}

// Modul beállítások
model ModuleSetting {
  id        String   @id @default(cuid())
  moduleId  String
  key       String
  value     String?  // Titkosított értékek esetén is string
  type      String   @default("string") // 'string', 'number', 'boolean', 'json'
  isSecret  Boolean  @default(false) // Titkosított értékek
  
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  @@unique([moduleId, key])
  @@map("module_settings")
}

// Rendszer beállítások
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

